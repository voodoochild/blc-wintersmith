extends layout

block content
  each article in articles
    article.post
      header
        h2
          a(href=article.url)= article.title
      section.post-body
        p.date
          span= moment(article.date).utc().format(locals.dateFormat)
        !{ typogr(article.html).typogrify() }
  nav#pagination
    if nextPage
      a(href=nextPage.url) « Older
    if prevPage
      a(href=prevPage.url) Newer »
